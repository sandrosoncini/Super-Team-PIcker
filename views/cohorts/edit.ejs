<%- include('../partials/header.ejs') %>
<div class="container">
    <h1>Edit Cohort</h1>
    <form action="/cohorts/<%= cohort.id %>" method="POST">
        <input type="hidden" name="_method" value="PATCH"/>
        <div class="form-group">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Logo Url</label>
            <input type="url" class="form-control form-control-lg"  name= "logoUrl" value="<%=cohort.logoUrl%> " placeholder="e.g. https://www.example.com/some.jpg">
        </div>
        <div class="form-group">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Name</label>
            <input type="string" class="form-control form-control-lg"  name="name" value="<%=cohort.name%> " placeholder="Flying Funks">
        </div>
        <div class="form-group">
            <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Members</label>
            <input type="text" class="form-control"  name="members" value="<%=cohort.members%>" placeholder="" rows="2">
        </div>
        <button type="submit" class="btn btn-primary btn-lg" value="submit" row="3">Submit</button>
    </form>
</div>
<%- include('../partials/footer.ejs') %>